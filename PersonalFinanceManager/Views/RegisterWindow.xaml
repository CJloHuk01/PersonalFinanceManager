<Window x:Class="PersonalFinanceManager.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModels="clr-namespace:PersonalFinanceManager.ViewModels"
        Title="Регистрация" Height="340" Width="420"
        WindowStartupLocation="CenterScreen"
        >
    <Window.DataContext>
        <viewModels:RegisterViewModel/>
    </Window.DataContext>
    <Grid Margin="20">

        <StackPanel>

            <TextBlock Text="Создание аккаунта"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="0 0 0 20"/>

            <TextBox Height="35" Padding="8"
                     Text="{Binding Email}"
                     Margin="0 0 0 5"/>

            <PasswordBox Height="35" x:Name="PasswordBox" Padding="8"
                         PasswordChanged="PasswordBox_OnPasswordChanged"
                         Margin="0 0 0 5"/>

            <PasswordBox Height="35" x:Name="ConfirmBox"
                         PasswordChanged="ConfirmBox_OnPasswordChanged"
                         Margin="0 0 0 5"/>

            <TextBlock Text="{Binding ErrorMessage}"
                       Foreground="Red"
                       Margin="0 0 0 10"/>

            <Button Content="Зарегистрироваться"
                    Command="{Binding RegisterCommand}"
                    Height="27"/>

            <Button Content="Назад ко входу"
                    Command="{Binding BackToLoginCommand}"
                    Margin="0 10 0 0"
                    Height="27"/>

        </StackPanel>
    </Grid>
</Window>
