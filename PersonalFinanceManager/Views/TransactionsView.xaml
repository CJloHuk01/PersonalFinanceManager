<UserControl x:Class="PersonalFinanceManager.Views.TransactionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:enums="clr-namespace:PersonalFinanceManager.Enum"
             xmlns:converters="clr-namespace:PersonalFinanceManager.Converters">

    <UserControl.Resources>
        <converters:AmountToColorConverter x:Key="AmountColorConverter"/>
        <ObjectDataProvider x:Key="TransactionTypes"
                            MethodName="GetValues"
                            ObjectType="{x:Type system:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="enums:TransactionType"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Background="{StaticResource CardBrush}"
                CornerRadius="14"
                Padding="20"
                Margin="0 0 0 20">

            <StackPanel>
                <TextBlock Text="Добавить транзакцию"
                           FontSize="18"
                           FontWeight="Bold"
                           Margin="0 0 0 16"/>

                <WrapPanel Margin="0 0 0 12">

                    <ComboBox Width="120" Height="30"
                                Padding="6"
                              ItemsSource="{Binding Accounts}"
                              SelectedItem="{Binding SelectedAccount}"
                              DisplayMemberPath="Name"
                              Margin="0 0 10 10"/>

                    <ComboBox Width="120" Height="30" Padding="6"
                              ItemsSource="{Binding FilteredCategories}"
                              SelectedItem="{Binding SelectedCategory}"
                              DisplayMemberPath="Name"
                              Margin="0 0 10 10"/>

                    <ComboBox Width="120" Height="30" Padding="6"
                              ItemsSource="{Binding Source={StaticResource TransactionTypes}}"
                              SelectedItem="{Binding TransactionType}"
                              Margin="0 0 10 10"/>

                    <TextBox Width="120" Height="30" Padding="5"
                             Text="{Binding TransactionAmount}"
                             Margin="0 0 10 10"/>

                    <DatePicker Width="140" Height="30" Padding="5"
                                SelectedDate="{Binding TransactionDate}"
                                Margin="0 0 10 10"/>
                    <Button Content="Дата ↑↓"
                            Command="{Binding ToggleSortByDateCommand}"
                            Margin="0 0 10 0"
                            Width="60" Height="30"
                                Padding="6"/>

                    <Button Content="Сумма ↑↓"
                            Command="{Binding ToggleSortByAmountCommand}"
                            Margin="0 0 10 0"
                            Width="60" Height="30"
                                Padding="6"/>

                    <Button Padding="14 6" Width="100" Height="30"
                            Content="{Binding FilterButtonText}"
                            Command="{Binding ToggleTransactionFilterCommand}"
                            Margin="0 0 10 0"/>
                </WrapPanel>

                <WrapPanel>
                    <TextBox Width="360"
                             Text="{Binding TransactionDescription}"
                             Margin="0 0 10 0"/>

                    <Button Content="Добавить"
                            Command="{Binding AddTransactionCommand}"
                            Width="120"
                            Height="30" Padding="6"/>
                </WrapPanel>
            </StackPanel>
        </Border>

        <ScrollViewer Grid.Row="1">
            <ItemsControl ItemsSource="{Binding Transactions}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{StaticResource CardBrush}"
                                CornerRadius="14"
                                Padding="16"
                                Margin="10"
                                Width="340">

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel>
                                    <TextBlock Text="{Binding Description}"
                                               FontSize="14"
                                               FontWeight="SemiBold"/>

                                    <TextBlock Text="{Binding Date, StringFormat=dd.MM.yyyy}"
                                               FontSize="12"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               Margin="0 4 0 0"/>

                                    <StackPanel Orientation="Horizontal"
                                                Margin="0 8 0 0">

                                        <Border Background="{Binding Category.Color}"
                                                Padding="6 2"
                                                CornerRadius="6"
                                                Margin="0 0 8 0">
                                            <TextBlock Text="{Binding Category.Name}"
                                                       FontSize="11"
                                                       Foreground="White"/>
                                        </Border>

                                        <TextBlock Text="{Binding Account.Name}"
                                                   FontSize="11"
                                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                                    </StackPanel>

                                    <TextBlock Text="{Binding Amount, StringFormat={}{0:N2} ₽}"
                                               FontSize="20"
                                               FontWeight="Bold"
                                               Margin="0 10 0 0"
                                               Foreground="{Binding TransactionType, Converter={StaticResource AmountColorConverter}}"/>
                                </StackPanel>

                                <Button Grid.Row="1"
                                        Content="Удалить"
                                        Command="{Binding DataContext.DeleteTransactionCommand,
                                                  RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                        CommandParameter="{Binding}"
                                        HorizontalAlignment="Right"
                                        Width="80"
                                        Height="24"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
