<Window x:Class="PersonalFinanceManager.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход" Height="300" Width="420" WindowStartupLocation="CenterScreen"
        xmlns:viewModels="clr-namespace:PersonalFinanceManager.ViewModels">
    <Window.DataContext>
        <viewModels:LoginViewModel/>
    </Window.DataContext>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>

            <TextBlock 
                        Text="Вход в систему"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="0 0 0 20"/>

            <TextBox Height="40" Padding="8"
                     Text="{Binding Email}"
                     Margin="0 0 0 5"/>

            <PasswordBox Height="40"  Padding="8"
                        x:Name="PasswordBox"
                         Margin="0 0 0 5"
                         PasswordChanged="PasswordBox_OnPasswordChanged"/>

            <TextBlock Text="{Binding ErrorMessage}"
                       Foreground="Red"
                       Margin="0 0 0 5"/>

            <Button Content="Войти"
                    Command="{Binding LoginCommand}"
                    Height="32" Margin="0 0 0 5" />

        </StackPanel>

        <Button Grid.Row="1" Width="200" Height="28"
                Content="Нет аккаунта? Регистрация"
                Margin="0 0 0 0"
                HorizontalAlignment="Center"
                Command="{Binding OpenRegisterCommand}"/>

    </Grid>
</Window>
