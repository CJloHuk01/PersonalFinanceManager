<UserControl x:Class="PersonalFinanceManager.Views.CategoriesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:PersonalFinanceManager.ViewModels"
             xmlns:enums="clr-namespace:PersonalFinanceManager.Enum">

    <UserControl.DataContext>
        <vm:CategoriesViewModel />
    </UserControl.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#F5F5F5" Padding="15" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Добавить категорию:" 
                           VerticalAlignment="Center" 
                           FontWeight="Bold" 
                           Margin="0,0,10,0"/>

                <TextBox Text="{Binding NewCategoryName, UpdateSourceTrigger=PropertyChanged}"
                         Width="200" 
                         Margin="5,0"
                         VerticalAlignment="Center"
                         Padding="5"/>

                <ComboBox SelectedItem="{Binding NewCategoryType}"
                          Width="120"
                          Margin="5,0"
                          VerticalAlignment="Center">
                    <ComboBoxItem Content="Доход"/>
                    <ComboBoxItem Content="Расход" IsSelected="True"/>
                </ComboBox>

                <Button Content="➕ Добавить"
                        Command="{Binding AddCategoryCommand}"
                        Margin="10,0,0,0"
                        Padding="10,5"
                        VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="ДОХОДЫ" 
                           FontWeight="Bold" 
                           FontSize="16" 
                           Margin="0,10,0,5"
                           Foreground="#4CAF50"/>

                <ItemsControl ItemsSource="{Binding IncomeCategories}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" 
                                    BorderBrush="#E0E0E0" 
                                    BorderThickness="1" 
                                    Margin="0,2" 
                                    Padding="10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>


                                    <TextBlock Grid.Column="1" 
                                               Text="{Binding Name}" 
                                               FontWeight="SemiBold" 
                                               FontSize="14"
                                               VerticalAlignment="Center"/>

                                    <Button Grid.Column="2" 
                                            Content="Х" 
                                            Command="{Binding DataContext.DeleteCategoryCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Background="Transparent" 
                                            BorderThickness="0"
                                            Width="25" 
                                            Height="25"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <TextBlock Text="РАСХОДЫ" 
                           FontWeight="Bold" 
                           FontSize="16" 
                           Margin="0,20,0,5"
                           Foreground="#F44336"/>

                <ItemsControl ItemsSource="{Binding ExpenseCategories}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" 
                                    BorderBrush="#E0E0E0" 
                                    BorderThickness="1" 
                                    Margin="0,2" 
                                    Padding="10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" 
                                               Text="{Binding Icon}" 
                                               FontSize="16"
                                               Margin="0,0,10,0"
                                               VerticalAlignment="Center"/>

                                    <TextBlock Grid.Column="1" 
                                               Text="{Binding Name}" 
                                               FontWeight="SemiBold" 
                                               FontSize="14"
                                               VerticalAlignment="Center"/>

                                    <Button Grid.Column="2" 
                                            Content="+" 
                                            Command="{Binding DataContext.DeleteCategoryCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Background="Transparent" 
                                            BorderThickness="0"
                                            Width="25" 
                                            Height="25"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>